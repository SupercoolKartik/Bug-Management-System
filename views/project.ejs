<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Project Details</title>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f5f5f5;
        margin: 20px;
        color: #333;
      }

      .project {
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      h1,
      h2,
      h3 {
        margin: 0;
      }

      h1 {
        font-size: 28px;
        margin-bottom: 10px;
      }

      h2 {
        font-size: 18px; /* Smaller size for Project Id */
        color: #555;
      }

      h3 {
        font-size: 22px; /* Slightly larger size for Ticket Id */
      }

      .users,
      .tickets {
        width: 100%;
        max-width: 600px;
        border: 1px solid #3498db;
        border-radius: 8px;
        margin: 20px;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      .users h2,
      .tickets h2 {
        color: #3498db;
        margin-bottom: 10px;
      }

      .user-list,
      .ticket-list {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .user,
      .ticket {
        background-color: #f9f9f9;
        padding: 10px;
        margin: 10px 0;
        border-radius: 4px;
      }

      .user p,
      .ticket p {
        margin: 0;
      }
    </style>
  </head>
  <body>
    <div class="project">
      <h1><%= projectData.pName %></h1>
      <h2>Project Id: <%= projectData.pId %></h2>
      <h3>Created By: <%= projectData.uIdCb %></h3>

      <div class="users">
        <h2>Users</h2>
        <ul class="user-list">
          <% usersData.forEach(user => { %>
          <li class="user">
            <p><strong>User ID:</strong> <%= user.uId %></p>
          </li>
          <% }); %>
        </ul>
      </div>

      <div class="tickets">
        <h2>Tickets</h2>
        <ul class="ticket-list">
          <% ticketsData.forEach(ticket => { %>
          <li class="ticket">
            <p><strong>Ticket ID:</strong> <%= ticket.tId %></p>
          </li>
          <% }); %>
        </ul>
      </div>
    </div>
  </body>
</html>
